    <div id="container">
      <header>
        <ul class="navigation">
          <% if current_user %>
            <li><%= link_to "[#{current_user.name} | ", edit_user_path(current_user) %></li>
            <li><%= link_to "Salir ]", destroy_user_session_path %></li>
          <% end %>
          <li><%= link_to 'Asambleas', assemblies_path %></li>
          <li><%= link_to 'Personas', users_path %></li>
          <li><%= link_to 'Grupos', groups_path %></li>
          <li><%#= link_to 'Actividad', activities_path %></li>
        </ul>
        <h1><%= yield :title %></h1>
        <div id="flash">
          <p class="notice"><%= notice %></p>
          <p class="alert"><%= alert %></p>
        </div>
      </header>

      <div id="main">
        <div id="page">
          <%= yield %>
        </div>
      </div>

      <footer>

      </footer>
    </div> <!--! end of #container -->


    <!-- Javascript at the bottom for fast page loading -->

